@using Domain.Teams.Entities;

<h3>Team's list</h3>



<MudSimpleTable Style="overflow-x: auto;">
    <thead>
        <tr>
            @foreach (var h in headings)
            {
                <th>@h</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var team in _teams!)
        {
            <tr>
                <td>@team.Name </td>
                <td>@team.Region</td>
                <td>@team.Foundation</td>
                <td><MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" @onclick="_ => HandleDeleteTeam(team)">Delete</MudButton></td>
            </tr>
        }
    </tbody>
</MudSimpleTable>


@code {
    string[] headings = { "Team name", "Region", "Foundation", "Delete"};

    [Parameter]
    public IEnumerable<Team>? _teams { get; set; }

    protected override void OnInitialized()
    {
        if (_teams is null)
            throw new ArgumentNullException();
    }

